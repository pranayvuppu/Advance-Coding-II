#include <stdio.h>

int main() {
    int num, digit;
    int frequency[10] = {0}; 

    printf("Enter a number: ");
    if (scanf("%d", &num) != 1) {
        printf("Invalid input. Please enter an integer.\n");
        return 1; 
    }

    if (num < 0) {
        num = -num;
    }

    while (num > 0) {
        digit = num % 10;   
        frequency[digit]++; 
        num /= 10;          
    }

    printf("Digit frequencies:\n");
    for (int i = 0; i < 10; i++) {
        if (frequency[i] > 0) {
            printf("Digit %d: %d times\n", i, frequency[i]);
        }
    }

    return 0;
}
